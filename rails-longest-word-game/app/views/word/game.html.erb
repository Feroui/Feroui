<h1>Welcome to the longest word-game !</h1>
<h3>Here is your grid :</h3>
<%= @grid %>

<form action="/score">
  <input type="text" name="solution" placeholder="Your word here">
  <input type="hidden" name="grid" value="<%=@grid_string%>">
  <input type="hidden" name="start_time" value="<%=Time.now%>">
  <input type="submit">
</form>
